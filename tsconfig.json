{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"types": ["bun-types"],
		"baseUrl": ".",
		"paths": {
			"$components/*": ["src/components/*"],
			"$layouts/*": ["src/layouts/*"],
			"$pages/*": ["src/pages/*"],
			"$db/*": ["src/db/*"],
			"$lib/*": ["src/lib/*"]
		},
		"experimentalDecorators": true,
		"useDefineForClassFields": false
	},
	"exclude": ["node_modules", "dist", "functions"]
}
